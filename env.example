# NewRAG Environment Configuration
# 复制此文件为 .env 并修改相应的值

# =============================================================================
# 数据库配置
# =============================================================================
# SQLite (默认，开发环境)
DATABASE_URL=sqlite:///data/documents.db

# PostgreSQL (生产环境推荐)
# DATABASE_URL=postgresql://username:password@localhost:5432/newrag

# =============================================================================
# JWT 认证配置
# =============================================================================
# JWT 密钥（必须修改！至少32个字符）
JWT_SECRET=kJ9mP2vX8nQ4wR7tY3zL6hF5dS1aG0bN8cM4xV9pK2uE7iW3oA6qT5rH8jL1mN4pS9v

# JWT 算法
JWT_ALGORITHM=HS256

# Access Token 过期时间（分钟）
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Refresh Token 过期时间（天）
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# 认证配置
# =============================================================================
# 是否允许用户注册（生产环境建议设置为 false）
ALLOW_REGISTRATION=true

# =============================================================================
# 初始管理员账户（首次启动时创建）
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=Admin123!@#

# =============================================================================
# Elasticsearch 配置
# =============================================================================
ES_HOST=http://localhost:9200
ES_USERNAME=
ES_PASSWORD=

# =============================================================================
# Embedding 模型配置
# =============================================================================
EMBEDDING_API_URL=http://localhost:1234/v1
EMBEDDING_API_KEY=lm-studio
EMBEDDING_MODEL=text-embedding-qwen3-embedding-4b

# =============================================================================
# Vision 模型配置
# =============================================================================
VISION_API_URL=http://localhost:1234/v1
VISION_API_KEY=lm-studio
VISION_MODEL=qwen/qwen3-vl-30b

# =============================================================================
# Web 服务配置
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=8080
UPLOAD_FOLDER=./uploads

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# MinIO 对象存储配置
# =============================================================================
MINIO_ENABLED=true
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=rag-bucket
MINIO_SECURE=false
MINIO_PUBLIC_URL=http://localhost:9000

